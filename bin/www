'use strict';

const path = require('path');

const config = require(path.join(__dirname, '..', 'config'));

let newrelic;
if (config.newRelicEnabled) {
    newrelic = require('newrelic');
}

let logentries;
if (config.logentriesEnabled) {
    const LogentriesClient = require('logentries-client');
    logentries = new LogentriesClient({
        token: config.logentriesToken
    });
}

const app = require(path.join(__dirname, '..', 'app'));

const onBind = function () {
    if (config.logentriesEnabled) {
        logentries.log('info', config);
    }
    console.log('Web server started, config: ' + JSON.stringify(config));
};

app.listen(config.port, onBind);
